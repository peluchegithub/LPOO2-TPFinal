<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBox" x:Key="EstiloTxb">
        <Setter Property="FontSize" Value="12"></Setter>
        <Setter Property="Background" Value="Black"></Setter>
        <Setter Property="Foreground" Value="#FF9800"></Setter>
        <Setter Property="CaretBrush" Value="White"></Setter>
    </Style>

    <Style TargetType="Button" x:Key="EstiloBtn">
        <Setter Property="FontSize" Value="12"></Setter>
        <Setter Property="Foreground" Value="Black"></Setter>
        <Setter Property="Background" Value="#FF9800"></Setter>
    </Style>

    <Style TargetType="PasswordBox" x:Key="EstiloPwb">
        <Setter Property="FontSize" Value="12"></Setter>
        <Setter Property="Background" Value="Black"></Setter>
        <Setter Property="Foreground" Value="#FF9800"></Setter>
        <Setter Property="CaretBrush" Value="White"></Setter>
    </Style>

</ResourceDictionary>