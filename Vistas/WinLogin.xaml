<Window x:Class="Vistas.WinLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:Vistas.controlUsuario"
        Title="Cinemax" Height="300" Width="300" MaxHeight="300" ResizeMode="NoResize"
        Icon="/Vistas;component/images/icono-cine.ico"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        
        <Grid.Background>
            <ImageBrush ImageSource="/Vistas;component/images/bg.jpg" />
        </Grid.Background>
        
        <StackPanel Margin="50,20,50,20">
            <control:Login x:Name="login"/>
            <Label Name="lblError" Foreground="Red" Margin="0,10,0,10" Content="" />
            <Button Name="btnIniciar" Content="Iniciar Sesion" Margin="40,0,40,0" Click="btnIniciar_Click" Style="{StaticResource ResourceKey=PlantillaBtn}"/>
        </StackPanel>
        
    </Grid>
    
</Window>
