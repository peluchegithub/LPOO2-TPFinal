<Window x:Class="Vistas.WinMenuVendedor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:Vistas.controlUsuario"
        Title="Cinemax - Vendedor" Height="600" Width="900" ResizeMode="NoResize"
        Icon="/Vistas;component/images/icono-cine.ico"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/Vistas;component/images/bg.jpg" />
        </Grid.Background>

        <StackPanel>

            <!-- Inicio control de usuario barra de menu -->
            <control:MenuVendedor x:Name="menuVendedor"/>
            <!-- Fin control de usuario de la barra de menu -->

            <Separator></Separator>
            <Label Content="00:00:00" FontFamily="Verdana" FontWeight="Bold" Height="50" FontSize="36" Foreground="Red"  Name="label_Hora" VerticalAlignment="Center" />
            <Label Content="jueves, 00 de Noviembre de 2020" Height="50" FontSize="32"  Name="label_Fecha"   Foreground="Red" FontWeight="Bold" FontFamily="Sitka Text"  />
            <Image Name="image1" Width="535" Source="/Vistas;component/images/logo-central2.png" Height="276" />
            
        </StackPanel>
       
    </Grid>
    
</Window>
